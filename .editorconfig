root = true

[.{gitignore,editorconfig}]
insert_final_newline = true
trim_trailing_whitespace = true

[*.{xml,targets,props,*proj}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[{*.gs,config.txt}]
charset = latin1
indent_size = 4
indent_style = tab
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[*.cs]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
